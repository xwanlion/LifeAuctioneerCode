<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lbl_auction_lot_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_auction_lot_name"
        android:textColor="@color/app_desc_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/txt_auction_lot_items"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sh_text_edit_background"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_padding_left_default_value"
        android:paddingLeft="@dimen/dp_padding_left_default_value"
        android:text="@string/txt_zero"
        android:textColor="@color/app_desc_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_auction_lot_items"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/lbl_auction_bidders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_auction_bidders"
        android:textColor="@color/app_desc_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/txt_auction_bidders"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sh_text_edit_background"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_padding_left_default_value"
        android:paddingLeft="@dimen/dp_padding_left_default_value"
        android:text="@string/txt_zero"
        android:textColor="@color/app_desc_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_auction_bidders"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/lbl_auction_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_auction_money"
        android:textColor="@color/app_desc_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/txt_auction_money"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sh_text_edit_background"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_padding_left_default_value"
        android:paddingLeft="@dimen/dp_padding_left_default_value"
        android:text="@string/txt_zero"
        android:textColor="@color/app_desc_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_auction_money"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/lbl_auction_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_auction_host"
        android:textColor="@color/app_desc_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <TextView
        android:id="@+id/txt_auction_host"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sh_text_edit_background"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_padding_left_default_value"
        android:paddingLeft="@dimen/dp_padding_left_default_value"
        android:text="@string/txt_auction_host"
        android:textColor="@color/app_desc_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_auction_host"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btn_back_home"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:text="@string/btn_back_home"
        android:textSize="20sp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_auction_host"
        app:layout_constraintVertical_bias="0.217" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="18dp" />
</androidx.constraintlayout.widget.ConstraintLayout>